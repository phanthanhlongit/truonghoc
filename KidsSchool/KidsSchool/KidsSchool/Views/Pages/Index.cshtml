@model KidsSchool.Models.Entity.Page
@using KidsSchool.Models.Dao;
@{
    ViewBag.Title = Model.title;
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section HeaderMetas
{
    <!-- HTML Meta Tags -->
    <meta name="description" content="@Html.Raw(Model.MetaDescription)" />
    <meta name="keywords" content="@Html.Raw(Model.MetaKeyword)" />
    <meta name="author" content="@Request.Url.Host" />
    <meta rel="canonical" href="@Request.Url" />

    <!-- Google / Search Engine Tags -->
    <meta itemprop="name" content="@Html.Raw(Model.MetaTitle)">
    <meta itemprop="description" content="@Html.Raw(Model.MetaDescription)" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="@Request.Url" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@Html.Raw(Model.MetaTitle)" />
    <meta property="og:description" content="@Html.Raw(Model.MetaDescription)" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:title" content="@Html.Raw(Model.MetaTitle)" />
    <meta name="twitter:description" content="@Html.Raw(Model.MetaDescription)" />
}

<style>
    h1 {
        font-size: 23px;
        color: #1a80be !important;
    }

    h2 {
        font-size: 19px;
        color: #1a80be !important;
    }

    h3 {
        font-size: 15px;
        color: #1a80be !important;
    }

    h2, h3 {
        text-transform: initial;
    }

    .send-contact .input-group .form-control {
        height: 60px;
        background: #fff;
    }

    .send-contact .input-group-append .btn {
        z-index: 100;
        height: 60px;
        width: 60px;
        padding: 0;
        background: #fff;
        border: #1a80be solid 1px;
        color: #07649c;
    }

    .container-contact {
        background: #1a80be;
        padding: 20px;
    }
</style>
<!-- Page content-->
<div class="container" style="padding-top:50px;">
    <ul class="breadcrumb">
        <li>
            <a href="/">Trang chủ</a> /
        </li>
        <li>
            <a>  @Model.title.LimitLength(150, "...")</a>
        </li>
    </ul>
    <div class="row">
        <!-- Blog entries-->
        <div class="col-lg-12">
            <!-- Nested row for non-featured blog posts-->
            <div class="row">
                <h1 class="uppercase col-md-12">
                    @Model.title
                </h1>
                <div class="clear"></div>
             
                <br />
                <div class="detail col-md-12" data-content>
                    @Html.Raw(Model.content)
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>
<div class="container-contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="send-contact">
                    <form action="javascript:SubmitSentContact('none','none','txtPhone','none','none', 1)">
                        <div class="input-group">
                            <input type="text" name="" id="txtPhone" placeholder="Số điện thoại của bạn" class="form-control" required>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary rounded-circle">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-8 col-md-12" style="color: #fff; font-size: 13px; padding: 10px 0; ">
                “ Hãy để lại cho VCOS số điện thoại của bạn. Đội ngũ chúng tôi sẽ liên hệ BÁO GIÁ tốt nhất cho bạn ngay! ”
            </div>
        </div>
    </div>
</div>
@section scripts{
    @(string.IsNullOrEmpty(Model.Script) ? Model.Script : "")
}