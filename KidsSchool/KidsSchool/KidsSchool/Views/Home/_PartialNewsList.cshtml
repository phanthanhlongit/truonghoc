@using KidsSchool.Models.Dao;
@try
{
    var news = CacheHelper.GetInstance().GetNews();
    if (news != null && news.Count > 0)
    {
        <div id="NewsList" class="truong-ngoai-khoa mrg-section" style="margin-top: 50px;">
            <div class="container-70">
                <h3 class="md-title" style="background: white;border-radius: 25px;padding: 10px;">GÓC CHIA SẺ</h3>
                <div class="">
                    <div class="owl-carousel owl-theme" id="newsCarousel">
                        @foreach (var info in news)
                        {
                            <div class="item item-1">
                                <div class="inner-item">
                                    <div class="icon icon-1" id="imgBox">
                                        <img alt="" title="" src="@info.Icon?h=250&mode=crop">
                                    </div> @*?w=170&h=170&mode=pad*@
                                    <div class="content">
                                        <h2 class="font-size-35" style="font-size: 20px; color: #2185d0;">@info.title</h2>
                                        <div class="info">
                                            <p>@Html.Raw(info.Description.Remove_Html_Tags().LimitLength(120, "..."))</p>
                                        </div>
                                        <div class="bottom"><a href="@Url.RouteUrl("FriendlyRoute", new { FriendlyUrl = info.slug })" class="md-more">Xem thêm</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
catch { }


<style>
    #NewsList .item {
        padding: 5px;
        height: 100%;
    }
    #imgBox {
        display: flex;
        justify-content: center;
    }

    #imgBox img {
        display: block;
        width: auto;
        margin-bottom: 14px;
    }

    #NewsList .item .inner-item {
        border: 3px solid #C7FDB4;
        background: #FFF;
        border-radius: 25px;
        height: 100%;
        position: relative;
        padding-bottom: 60px;
    }
    #NewsList .info{
        padding: 17px;
        font-size: 17.5px;
    }
    #NewsList .bottom {
        text-align: center;
        position: absolute;
        width: 100%;
        bottom: 20px;
        right: 40px;
    }
    #NewsList .owl-stage {
        display: flex;
    }
    
</style>