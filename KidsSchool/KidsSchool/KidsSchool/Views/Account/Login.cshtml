@using KidsSchool.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<main class="page-main page-dangky">
    <div class="content clearfix md-relative">
        <!-- <div class="fb-messenger">
            <img class="icon-fb-messenger" src="/static/images/ico-fb-mesenger.png" alt="">
        </div> -->
        <div id="register_form" class="container-70">
            <div class="md-right wow fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-2 col-md-10">
                            <input type="submit" value="Log in"  />
                        </div>
                    </div>
                }
               
            </div>
            <div class="md-left wow fadeInRight" style="visibility: visible; animation-name: fadeInRight;">
                <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png" alt="" class="md-desktop">
                <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png" alt="" class="md-mobile">
            </div>
        </div>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}